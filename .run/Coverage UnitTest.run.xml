<component name="ProjectRunConfigurationManager">
  <configuration default="false" name="Coverage UnitTest" type="PHPUnitRunConfigurationType" factoryName="PHPUnit">
    <CommandLine>
      <envs>
        <env name="XDEBUG_MODE" value="coverage" />
      </envs>
    </CommandLine>
    <TestRunner configuration_file="$PROJECT_DIR$/phpunit.xml" scope="XML" options="--teamcity --coverage-text --coverage-clover=coverage.clover" use_alternative_configuration_file="true" />
    <method v="2" />
  </configuration>
</component>
